# Application
APP_NAME=LegalAidTriage
DEBUG=true
API_VERSION=v1

# Supabase - Get from Supabase Dashboard
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...your-anon-key
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...your-service-key

# LLM Providers (set at least one)
LLM_PROVIDER=gemini

# Google Gemini (recommended for free tier)
GOOGLE_API_KEY=your-google-api-key

# OpenRouter (alternative)
OPENROUTER_API_KEY=your-openrouter-key

# OpenAI (if available)
OPENAI_API_KEY=your-openai-key

# HuggingFace (for embeddings and optional chat)
HF_API_TOKEN=your-huggingface-token
HF_API_TOKEN_EMB=your-huggingface-token

# xAI Grok (optional)
XAI_API_KEY=your-xai-key

# Embeddings
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Agent Settings
CONFIDENCE_THRESHOLD=0.7
MAX_CLARIFICATION_LOOPS=5
MAX_CONTEXT_MESSAGES=10

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this
CORS_ORIGINS=http://localhost:5173,http://localhost:3000